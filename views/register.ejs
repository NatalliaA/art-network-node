<%- include("partials/header") %>

<div class="container">
    <div class="row text-center">
        <div class="col-md-3">
            </div>
        <div class="col-md-6 text-center">
            
        <!-- Alert message -->        
            <% if(error && error.length>0){ %>
                <div class= "alert alert-info" role='alert'>
                    <%= error %>
                    </div>
            <% } %>
            <% if(success && success.length>0) { %>
        <div class= "alert alert-info" role='alert'>
            <%= success %>
            </div>
            <% } %>
            
    <div class="thumbnail thumbnailform">
    <h1 class="formtitle">Sign up</h1>
<form action="/register" method="POST">
    <div class="form-group text-left">
    <label for="username">Username</label>
    <input class="form-control" type="text" id="username" placeholder="Your username" name="username" autofocus required>
    </div>
    <div class="form-group text-left">
    <label for="email">Email</label>
    <input class="form-control" type="email" id="email" placeholder="Your email address" name="email" required>
    </div>
    <div class="form-group text-left">
    <label for="password">Password</label>
    <input class="form-control" type="password" id="password" placeholder="Your password" name="password" required>
    </div>
    <input class="btn btn-primary" type="submit" value="Sign up">    
</form>
</div>
</div>

<div class="col-md-3">
</div>

</div>
</div>

<%- include("partials/footer") %>