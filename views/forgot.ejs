<%- include("partials/header") %>
<div class="container">
    <div class="row text-center">
        <div class="col-md-3">
            </div>
        <div class="col-md-6 text-center">
            
        <!-- Alert message -->        
            <% if(error && error.length>0){ %>
                <div class= "alert alert-info" role='alert'>
                    <%= error %>
                    </div>
            <% } %>
            <% if(success && success.length>0) { %>
        <div class= "alert alert-info" role='alert'>
            <%= success %>
            </div>
            <% } %>            
            
    <div class="thumbnail thumbnailform">
    <h1 class="formtitle">Forgot Password</h1>
    <div>
        <p>Enter your user account's verified email address.</br>
        We will send you a password reset link.</p>
    </div>    
    <form action="/forgot" method="POST">
        <div class="form-group text-left">
        <label for="email">Email</label>        
        <input class="form-control" type="email" id="email" placeholder="Your email address" name="email" required autofocus> 
        </div>     
        <input class="btn btn-primary" type="submit" value="Send email">               
    </form>
    </div>
    </div>

<div class="col-md-3">
</div>

</div>
</div>

<%- include("partials/footer") %>