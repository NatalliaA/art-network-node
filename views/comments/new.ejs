<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
        </div>

        <div class="col-md-6">
            
        <!-- Alert message -->
        
            <% if(error && error.length>0){ %>
                <div class= "alert alert-info" role='alert'>
                    <%= error %>
                    </div>
            <% } %>
            <% if(success && success.length>0) { %>
        <div class= "alert alert-info" role='alert'>
            <%= success %>
            </div>
            <% } %>         

            <div class="thumbnail thumbnailform">
        <h1 class="text-center formtitle">Add a comment to <%= exhibit.name %></h1>
        <form action="/exhibits/<%= exhibit._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="text" name="comment[text]"
                required>
            </div>                      
           
            <div class="form-group text-center">           
            <button class="btn btn-primary">Submit</button>
            <a class="btn btn-default" href="/exhibits/<%= exhibit._id %>">Cancel</a>
            </div>
        </form>
        </div>
        </div>

        <div class="col-md-3">
        </div>

    </div>
</div>

<%- include("../partials/footer") %>
