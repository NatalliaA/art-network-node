<%- include("partials/header") %>
<div class="container">
    <div class="row text-center">
        <div class="col-md-3">
            </div>
        <div class="col-md-6 text-center">
            
        <!-- Alert message -->        
            <% if(error && error.length>0){ %>
                <div class= "alert alert-info" role='alert'>
                    <%= error %>
                    </div>
            <% } %>
            <% if(success && success.length>0) { %>
        <div class= "alert alert-info" role='alert'>
            <%= success %>
            </div>
            <% } %>            
            
    <div class="thumbnail thumbnailform">
    <h1 class="formtitle">Reset Password</h1>
    <form action="/reset/<%=token%>" method="POST">
        <div class="form-group text-left">
        <label for="password">New password</label>           
        <input class="form-control input-margin" type="password" placeholder="New password" name="password" autofocus required>
        </div>
        <div class="form-group text-left">
        <label for="confirm">Confirm password</label> 
        <input class="form-control" type="password" id="confirm" placeholder="Confirm password" name="confirm" required>
        </div>
        <input class="btn btn-primary" type="submit" value="Save">      
    </form>
    </div>
    </div>

<div class="col-md-3">
</div>

</div>
</div>

<%- include("partials/footer") %>